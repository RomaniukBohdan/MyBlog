<h1 align="center">Список постів</h1>\
<% @post.each do |post| %>
  <div class="row ">
    <div class="col-xs-8 col-xs-offset-2 ">
      <div class="well well-lg blur" >
        <div class="article-title ">
          <h3><%=post.title %></h3>
        </div>
        <div class="article-body">
          <p><%=post.body %></p>
        </div>
        <div class="article-actions">
          <%= link_to 'Читати', post_path(post) ,class: 'btn btn-info'%>
        </div>
      </div>

    </div>
  </div>
<%end %>

<!DOCTYPE html>
<html>
  <head>
    <title>SilenterBlog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#myNavbar">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to "Silenter Blog", home_path, class: "navbar-brand", id: "logo" %>
      </div>
      <div class="collapse navbar-collapse" id="myNavbar">
        <ul class="nav navbar-nav ">
          <li class="nav-item"> <%= link_to "Головна", home_path %> </li>
          <li class="nav-item"> <%= link_to "Добавити пост", new_post_path %> </li>
          <li class="nav-item"><%= link_to "Про мене", about_path %> </li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <% if logged_in? %>
            <li><%= link_to "Log out", logout_path, method: :delete %></li>
          <% else %>
            <li class="nav-item"> <%= link_to "Sign Up", signup_path %></li>
            <li class="nav-item"> <%= link_to "LogIn", login_path %></li>
          <% end %>
        </ul>
      </div>
      </div>

  </nav>
    <%= yield %>
  </body>
</html>
